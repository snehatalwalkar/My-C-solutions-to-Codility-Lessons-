//This code is entirely my creation and gives a 100% score on Codility

int solution(int N) 
{
    //Declare variables
    //BG is absent in 0-4
    //Binary gap begins when first 1 obtained, let initial 0s go
    // Save first 1, maxgap still 0!
    //For next 0s, start counter and count the gap
    //If next 1, store the last gap as maxgap
    //Else, if N>0: keep counting , else return maxgap=0

   
    int gap=0;
    int maxgap=0;
    if(N<4)
    {
        return 0;
    }
    else
    {
        while(N%2==0)
        {
             N=N/2;               //first 0s are not counted
        }
        
        while(N>0)
         {
             if(N%2==1)
            {
                if(gap>=maxgap)
                {
                    maxgap=gap;  //maxgap updated
                    gap=0;       //counter flushed
                }
                else
                {
                    N=N/2;   //eliminates consecutive 1's
                }     
            }
            else
            {
                gap=gap+1;  //counter begins for 0's followed by 1
            }
             N=N/2;   
        }
        
    }
        
    return maxgap;
            
}
